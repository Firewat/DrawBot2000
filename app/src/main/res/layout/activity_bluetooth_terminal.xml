<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bluetooth Verbindung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerDevices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnRefreshDevices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:textSize="14sp"
                android:backgroundTint="#FF9800" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connect"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDisconnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disconnect"
                android:enabled="false"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Terminal-Output -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terminal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <Button
                android:id="@+id/btnClearTerminal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="12sp"
                android:backgroundTint="#757575"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollViewTerminal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#1E1E1E"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvTerminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[G-CODE TERMINAL READY]\nConnect to your DrawBot...\n"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textIsSelectable="true" />
        </ScrollView>

        <!-- G-Code Upload File -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnUploadGCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload G-code file"
                android:textSize="14sp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSelectedFile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No file selected"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etGCodeInput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="G-code commands (one per line)"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:fontFamily="monospace"
            android:background="#F8F8F8"
            android:padding="12dp"
            android:enabled="false"
            android:minLines="6"
            android:scrollbars="vertical"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <!-- G-Code Commands -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnSendGCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send"
                android:enabled="false"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />
            <Button
                android:id="@+id/btnStopGCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop"
                android:enabled="false"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvGCodeProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0/0 commands"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Homing Button -->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Position ( X0 Y0 Z1)"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:textSize="16sp" />


    </LinearLayout>
</ScrollView>
