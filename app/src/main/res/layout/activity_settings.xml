<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F5F5F5"
        android:gravity="center">

        <!-- Kalibrierungseinstellungen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalibrierung"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etStepsPerMm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="STEPS_PER_MM (z.B. 85.33)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etDefaultSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DEFAULT_SPEED (z.B. 500.0)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etMaxSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MAX_SPEED (z.B. 1000.0)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSendCalibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalibrierung senden"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"/>

        <!-- Profil löschen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnDeleteProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil löschen"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
