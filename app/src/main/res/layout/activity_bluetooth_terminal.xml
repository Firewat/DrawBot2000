<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bluetooth Verbindung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerDevices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnRefreshDevices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktualisieren"
                android:textSize="14sp"
                android:backgroundTint="#FF9800" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verbinden"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDisconnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trennen"
                android:enabled="false"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Terminal-Ausgabe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terminal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <Button
                android:id="@+id/btnClearTerminal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="12sp"
                android:backgroundTint="#757575"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollViewTerminal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#1E1E1E"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvTerminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[G-CODE TERMINAL READY]\nVerbinde dich mit deinem DrawBot...\n"
                android:textColor="#00FF00"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textIsSelectable="true" />
        </ScrollView>

        <!-- G-Code Datei hochladen und Eingabe -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnUploadGCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="G-Code Datei hochladen"
                android:textSize="14sp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSelectedFile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keine Datei ausgewählt"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etGCodeInput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="G-Code Befehle (eine pro Zeile)"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:fontFamily="monospace"
            android:background="#F8F8F8"
            android:padding="12dp"
            android:enabled="false"
            android:minLines="6"
            android:scrollbars="vertical"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <!-- G-Code Steuerung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnSendGCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Senden"
                android:enabled="false"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnPauseGCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pause"
                android:enabled="false"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btnStopGCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stopp"
                android:enabled="false"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Terminal/Screen Reset Button -->
        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminal/Screen zurücksetzen"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <!-- G-Code Status und Delay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvGCodeProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0/0 commands"
                android:textSize="14sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvGCodeDelay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delay: 100ms"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginStart="16dp" />

            <EditText
                android:id="@+id/etGCodeDelay"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="ms"
                android:inputType="number"
                android:text="100"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Home-Button -->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home-Position"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
